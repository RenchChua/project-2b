<li>
  <div class="container">
    <%= image_tag product.picture.url if product.picture? %>
  </div>

  <div class="container">
    <%= link_to product.name, product %>
    <%= "$#{product.price}"%>
    <%if logged_in? && current_user.admin?%>
      <%= link_to "| edit |", "/products/#{product.id}/edit"%>
      <%= link_to "delete", product, method: :delete, data: { confirm: "You sure?" } %>
    <%end%>
  </div>
</li>
