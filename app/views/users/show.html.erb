<% provide(:title, @user.name) %>
<div class="row show-user">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <% if current_user == @user%>
          <%= link_to "New Wibni", "/users/#{@user.id}/wibnis/new", class: "btn btn-primary"%>
        <%end%>
      </h1>
      <h2>
        <%= "email is #{@user.email}" %>
      </h2>
      <h2>
        <%= "is admin? #{@user.admin}"%>
      </h2>
    </section>
  </aside>
</div>
