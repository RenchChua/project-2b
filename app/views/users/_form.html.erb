<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control'%>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :password %>
  <%= f.password_field :password, placeholder: "  At least six characters", class: 'form-control' %>

  <%= f.label :password_confirmation, "Confirm your password" %>
  <%= f.password_field :password_confirmation, placeholder: "  Retype your password", class: 'form-control'  %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
