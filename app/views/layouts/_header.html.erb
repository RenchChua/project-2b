<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "WIBNI", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li><%= link_to "Users", users_url, class: "navbar-txt"%></li>
            <li><%= link_to "Categories", categories_url%></li>
          <%end%>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle navbar-txt" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user, class: "navbar-txt" %></li>
              <li><%= link_to "Settings", edit_user_path(current_user), class: "navbar-txt" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete", class: "navbar-txt" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Join Us", signup_path, class: "navbar-txt" %></li>
          <li><%= link_to "Log in", login_path, class: "navbar-txt" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
