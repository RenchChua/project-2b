<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "WIBNI", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            WIBNIs <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%=link_to "All WIBNIs", wibnis_url%></li>
            <% (category_index.order:id).each do |category|%>
              <li><%= link_to "#{category.name}", "/categories/#{category.id}" %></li>
            <%end%>
          </ul>
        </li>
        <% if logged_in? %>
          <% if current_user.admin? %>
            <li><%= link_to "Users", users_url %></li>
            <li><%= link_to "Categories", categories_url%></li>
          <%end%>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
