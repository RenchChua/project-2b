<div class="container">
  <aside class="wibni-container col-md-8 col-xs-12">
    <h1><%=@wibni.title%></h1>
    <%=image_tag @wibni.picture.url if @wibni.picture? %>
    <div class="summary-txt">
      <p><%=@wibni.summary%></p>
    </div>
    <div class="description">
      <p class="subtitle">WIBNI Description:</p>
      <p class="text"><%=@wibni.description%></p>
    </div>
    <div class="looking-for">
      <p class="subtitle">Support Needed:</p>
      <p class="text"><%=@wibni.looking_for%></p>
    </div>
    <section class="comments_form">
        <%= render 'shared/comment_form' %>
      </section>
  </aside>
  <div class="profile col-md-4 col-xs-12">
    <%= gravatar_for @wibni.user %>
    <p><%= @wibni.user.name %></p>
  </div>

</div>
