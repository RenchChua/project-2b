<%= form_for([@user, @wibni], html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control'%>

  <%= f.label :summary %>
  <%= f.text_field :summary, class: 'form-control'%>

  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control'%>

  <%= f.label :looking_for %>
  <%= f.text_area :looking_for, placeholder: "  Tell people what you need them to help you with", class: 'form-control'%>

  <%= f.label :category %>
  <%= collection_select(:wibni, :category_id, Category.all, :id, :name)%>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>
  </span>
  <script type="text/javascript">
  $('#prouct_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>
<% end %>
