<%= form_for(@comment, url: new_wibni_comment_path(params[:id]), html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label :comment_title %>
  <%= f.text_field :title, class: 'form-control'%>
  <div class="field">
    <%= f.text_area :content, placeholder: "How can this be better? How will you like to help?" %>
  </div>


  <%= f.submit "Help's a coming!", class: "btn btn-primary" %>
<% end %>
